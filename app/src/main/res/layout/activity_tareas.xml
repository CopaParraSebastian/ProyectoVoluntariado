<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TareasActivity">

    <TextView
        android:id="@+id/textViewTareasTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAREAS"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/checkBoxTarea1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarea 1: Ayudar en la sala de emergencias"
        app:layout_constraintTop_toBottomOf="@id/textViewTareasTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/checkBoxTarea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarea 2: Organizar actividades recreativas"
        app:layout_constraintTop_toBottomOf="@id/checkBoxTarea1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/checkBoxTarea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarea 3: Apoyar en la limpieza"
        app:layout_constraintTop_toBottomOf="@id/checkBoxTarea2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonGuardarTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR PROGRESO"
        app:layout_constraintTop_toBottomOf="@id/checkBoxTarea3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
